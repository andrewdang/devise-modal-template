<div class="modal-dialog modal-sm">
  <div class="modal-content">
    <div class="modal-header">
      <button class="close" data-dismiss="modal">x</button>
      <p class="text-center">SIGN UP</p>
    </div>

    <div class="modal-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="field form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, required: 'required', class: "form-control" %>
        </div>

        <div class="field form-group">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters min)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", required: 'required', class: "form-control" %>
        </div>

        <div class="field form-group">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", required: 'required', class: "form-control" %>
        </div>

        <div class="actions form-group">
          <%= f.submit "Sign Up", class: "btn btn-default" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>
